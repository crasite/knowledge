* {
    box-sizing: border-box;
}
body{
    height: 100%;
}
#main-container{
    display: grid;
    grid-gap: 3em;
    @media (min-width:34em){
        grid-template-columns:1fr 4fr

        >header {
            grid-column:1/3;
        }
    }

    >nav {
        >div{
            &:nth-of-type(odd){
                background-color: aquamarine;
            }
            &:nth-of-type(even){
                background-color: aqua;
            }
            &:hover{
                >div{
                    overflow: auto
                    max-height: 5em
                }
            }

            >div{
                    transition-property: all
                    display: flex
                    flex-direction: column
                    transition-duration: 300ms
                    overflow: hidden
                    max-height: 0em
            }
        } 
    }
}